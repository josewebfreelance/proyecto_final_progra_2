<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>sr_usuario</servlet-name>
        <servlet-class>controlador.sr_usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_tablero</servlet-name>
        <servlet-class>controlador.sr_tablero</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet_empl</servlet-name>
        <servlet-class>controlador.Servlet_empl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet_puesto</servlet-name>
        <servlet-class>controlador.Servlet_puesto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_venta</servlet-name>
        <servlet-class>controlador.sr_ventas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_ventas_detalle</servlet-name>
        <servlet-class>controlador.sr_ventas_detalle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_usuario</servlet-name>
        <url-pattern>/sr_usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_usuario</servlet-name>
        <url-pattern>/usuarios/sr_usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_tablero</servlet-name>
        <url-pattern>/tablero/sr_tablero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_empl</servlet-name>
        <url-pattern>/empleados/Servlet_empl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_puesto</servlet-name>
        <url-pattern>/puestos/Servlet_puesto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_venta</servlet-name>
        <url-pattern>/ventas/sr_ventas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_ventas_detalle</servlet-name>
        <url-pattern>/sr_ventas_detalle</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
